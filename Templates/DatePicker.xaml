<!-- A control that lets a user select a date. -->
<DatePicker
    x:Name=""
    Margin="0,0,0,0"
    CalendarIdentifier="GregorianCalendar"
    DayFormat="{}{dayofweek.abbreviated(3)}"
    DayVisible="True"
    Header="Date"
    IsEnabled="True"
    MonthFormat="{}{month.full}"
    MonthVisible="True"
    YearFormat="{}{year.full(4)}"
    YearVisible="True" />

